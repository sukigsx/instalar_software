 #!/bin/bash

ruta_ejecucion=$(dirname "$(readlink -f "$0")")

#colores
rojo="\e[0;31m\033[1m" #rojo
verde="\e[;32m\033[1m"
azul="\e[0;34m\033[1m"
amarillo="\e[0;33m\033[1m"
rosa="\e[0;35m\033[1m"
turquesa="\e[0;36m\033[1m"
borra_colores="\033[0m\e[0m" #borra colores

#toma el control al pulsar control + c
trap ctrl_c INT
function ctrl_c()
{
clear
figlet -c Gracias por
figlet -c utilizar mi
figlet -c script
#wmctrl -r :ACTIVE: -b remove,maximized_vert,maximized_horz
exit
}

menu_info(){
#muestra el menu de sukigsx
echo ""
echo -e "${rosa}            _    _                  ${azul}   Nombre del script${borra_colores} (Instalacion de software)"
echo -e "${rosa}  ___ _   _| | _(_) __ _ _____  __  ${azul}   Descripcion${borra_colores} (Software de instalacion basado en Debian)"
echo -e "${rosa} / __| | | | |/ / |/ _\ / __\ \/ /  ${azul}   Version            =${borra_colores} $version"
echo -e "${rosa} \__ \ |_| |   <| | (_| \__ \>  <   ${azul}   Conexion Internet  =${borra_colores} $conexion"
echo -e "${rosa} |___/\__,_|_|\_\_|\__, |___/_/\_\  ${azul}   Software necesario =${borra_colores} $software"
echo -e "${rosa}                  |___/             ${azul}   Actualizado        =${borra_colores} $actualizado"
echo -e ""
echo -e "${azul} Contacto:${borra_colores} (Correo scripts@mbbsistemas.com) (Web https://repositorio.mbbsistemas.es)${borra_colores}"
echo ""
echo -e " ${verde} - INSTALACION PAQUETES DE SEGURIDAD -${borra_colores}"
echo ""
}


while :
do
    clear
    menu_info
    echo -e " Navegadores disponibles       Descripcion."
    echo -e ""
    echo -e "${azul}  1)${borra_colores} Gufw                      Cortafuefos para linux."
    echo -e "${azul}  2)${borra_colores} ClamTK                    Sostware gratuito de antivirus con una interfaz gráfica de usuario (GUI)."
    echo -e "${azul}  3)${borra_colores} wireguard                 Un cliente de VPN y tambien su entorno grafico."
    echo -e "${azul}  4)${borra_colores} Tailscale                 Un cliente para configurar la conexion a vpn por tailscale."
    echo -e "${azul}  5)${borra_colores} Trayscale                 GUI para tailscale, ej. (sudo tailscale set --operator=$USER)."
    echo ""
    echo -e "${azul} 90)${borra_colores} Ayuda                     Carga la ayuda"
    echo -e "${azul} 99)${borra_colores} Atras                     Salir (ctrl-c)"
    echo -e ""
    read -p " Selcciona numero de categoria de software -> " opcion

        case $opcion in
            "1")#Gufw
                #codigo para la instalacion se mete a /tmp/software
                echo "#Gufw" >> /tmp/software #mete el nombre del programa para poder comprobar su instalacion
                echo "sudo apt install -y gufw" >> /tmp/software
                echo "" >> /tmp/software

                #linea con el nombre del programa instalado para la comprobacion
                echo "gufw" >> /tmp/ComprobarSoftware
                echo ""; echo -e "${azul} Añadido ${verde}OK${borra_colores}"; sleep 1
                ;;

            "2")#ClamTK
                #codigo para la instalacion se mete a /tmp/software
                echo "#ClamAV" >> /tmp/software #mete el nombre del programa para poder comprobar su instalacion
                echo "sudo apt install -y clamtk" >> /tmp/software
                echo "" >> /tmp/software

                #linea con el nombre del programa instalado para la comprobacion
                echo "clamtk" >> /tmp/ComprobarSoftware
                echo ""; echo -e "${azul} Añadido ${verde}OK${borra_colores}"; sleep 1
                ;;

            "3")#Wireguird
                #codigo para la instalacion se mete a /tmp/software
                echo "#Wireguard" >> /tmp/software #mete el nombre del programa para poder comprobar su instalacion
                echo "wget -P /tmp/ wget https://github.com/UnnoTed/wireguird/releases/download/v1.1.0/wireguird_amd64.deb" >> /tmp/software
                echo "sudo gdebi -n /tmp/wireguird_amd64.deb" >> /tmp/software
                echo "rm /tmp/wireguird_amd64.deb" >> /tmp/software
                echo "sudo apt update; sudo apt install -y wireguard" >> /tmp/software
                echo "" >> /tmp/software

                #linea con el nombre del programa instalado para la comprobacion
                echo "wireguird" >> /tmp/ComprobarSoftware
                echo "wireguard" >> /tmp/ComprobarSoftware
                echo ""; echo -e "${azul} Añadido ${verde}OK${borra_colores}"; sleep 1
                ;;

            "4")#Tailscale
                #codigo para la instalacion se mete a /tmp/software
                if extrepo search tailscale; then
                    sudo extrepo enable tailscale >/dev/null 2>&1
                    echo "#tailscale" >> /tmp/software #mete el nombre del programa para poder comprobar su instalacion
                    echo "sudo apt update; sudo apt install -y tailscale" >> /tmp/software
                    echo "" >> /tmp/software

                    #linea con el nombre del programa instalado para la comprobacion
                    echo "tailscale" >> /tmp/ComprobarSoftware
                    echo ""; echo -e "${azul} Añadido ${verde}OK${borra_colores}"; sleep 1
                else
                    echo "❌ No se encontró el repositorio para tailscale."; read p
                fi
                ;;

            "5")#Trayscale
                #codigo para la instalacion se mete a /tmp/software
                echo "#Trayscale" >> /tmp/software #mete el nombre del programa para poder comprobar su instalacion

                echo "sudo apt install flatpak -y" >> /tmp/software
                echo "sudo apt install gnome-software-plugin-flatpak -y" >> /tmp/software
                echo "sudo apt install plasma-discover-backend-flatpak -y" >> /tmp/software
                echo "sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo" >> /tmp/software
                echo "flatpak install flathub dev.deedles.Trayscale -y" >> /tmp/software
                echo "" >> /tmp/software

                #linea con el nombre del programa instalado para la comprobacion
                #echo "org.telegram.desktop" >> /tmp/ComprobarSoftware
                echo "dev.deedles.Trayscale" >> /tmp/ComprobarSoftware
                echo ""; echo -e "${azul} Añadido ${verde}OK${borra_colores}"; sleep 1
                ;;

            "90") #Ayuda
                clear
                cat $ruta_ejecucion/AyudaInstalacionSoftware
                read pause
                ;;

            "99") #Salir
                ctrl_c
                ;;

            *) #seleccion invalida
                echo -e ""
                echo -e "${amarillo} No has seleccionado una opcion valida del menu.${borra_colores}"
                sleep 3
                ;;
        esac
    done
