                cat << 'EOF' >> /tmp/software
# Obtener el Ãºltimo release (no solo el tag)
echo "ðŸ” Buscando la Ãºltima versiÃ³n de RustDesk..."
LATEST_RELEASE_API="https://api.github.com/repos/rustdesk/rustdesk/releases/latest"
LATEST_TAG=$(curl -s "$LATEST_RELEASE_API" | grep '"tag_name":' | cut -d '"' -f4)

echo "ðŸ“Œ Ãšltimo tag encontrado: $LATEST_TAG"

# Buscar la URL del archivo .deb que contenga '86_64' y termine en '.deb'
DEB_URL=$(curl -s "$LATEST_RELEASE_API" | \
  grep browser_download_url | grep '86_64' | grep '.deb"' | cut -d '"' -f4)

if [ -z "$DEB_URL" ]; then
  echo "âŒ No se encontrÃ³ un archivo .deb (x64) en la versiÃ³n $LATEST_TAG"
  exit 1
fi

# Si hay varios .deb (por ejemplo 32 y 64 bits), tomamos el primero que coincida
DEB_URL=$(echo "$DEB_URL" | head -n 1)

# Obtener el nombre del archivo
DEB_FILE=$(basename "$DEB_URL")

echo "â¬‡  Descargando: $DEB_FILE"
curl -L -O "$DEB_URL"
EOF
                echo "" >> /tmp/software
