                echo "sudo sh -c 'echo \"deb [arch=amd64 signed-by=/usr/share/keyrings/mwt-desktop.gpg] https://mirror.mwt.me/shiftkey-desktop/deb/ any main\" > /etc/apt/sources.list.d/extrepo-github-desktop.list'" >> /tmp/software
